{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["ES2020"],
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["shared/src/*"],
            "@engine/*": ["engine/src/*"],
            "@discourse/*": ["discourse/src/*"],
            "@twitter/*": ["twitter/src/*"],
            "@discord/*": ["discord/src/*"]
        },
        "outDir": "dist"
    },
    "include": [
        "engine/src/**/*.ts",
        "discourse/src/**/*.ts",
        "discord/src/**/*.ts",
        "twitter/src/**/*.ts",
        "shared/src/**/*.ts"
    ],
    "exclude": ["node_modules", "dist", "scripts", "discourse-forum-OLD"]
}
