{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,

        "resolveJsonModule": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["shared/src/*"],
            "@engine/*": ["engine/src/*"],
            "@discourse/*": ["discourse/src/*"],
            "@twitter/*": ["twitter/src/*"],
            "@discord/*": ["discord/src/*"]
        }
    },
    "exclude": ["node_modules", "dist", "scripts", "discourse-forum-OLD"]
}
