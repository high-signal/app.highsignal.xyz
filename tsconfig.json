{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@engine/*": ["./lambda/dist/engine/src/*"],
            "@shared/*": ["./lambda/dist/shared/src/*"],
            "@discourse/*": ["./lambda/dist/discourse/src/*"],
            "@twitter/*": ["./lambda/dist/twitter/src/*"],
            "@discord/*": ["./lambda/dist/discord/src/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": ["app", "next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
    "exclude": [
      "node_modules",
      "lambda",
      "**/*.test.ts",
      "**/*.spec.ts",
      "lambda/vitest.config.ts"
    ]
}
